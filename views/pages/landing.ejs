<% include ../partials/header %>
<div class="container">
  <div class="text-center jumbotron">
    <h1>Wikipedia - Reader</h1>
    <p>With this tool you can search directly in Wikipedia!</p>
  </div>
  <form method="GET" class="form-horizontal" action="/result">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="text-center panel-title">What do you want to find in Wikipedia?</h3>
        </div>
        <div class="panel-body">
          <div class="row form-group">
            <div class="col-sm-10">
              <input type="text" name="search" class="form-control" id="search" placeholder="Search Wikipedia">
            </div>
            <div class="col-sm-2">
              <button type="submit" class="btn btn-primary" name="button">
                Search
              <span><i class="fa fa-search text-grey" aria-hidden="true"></i></span>
              </button>
            </div>
          </div>
        </div>
  </form>
</div>
<% include ../partials/footer %>
